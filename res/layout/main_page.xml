   <TextView
       android:id="@+id/textView1"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignParentRight="true"
       android:layout_alignParentTop="true"
       android:layout_marginTop="200dp"
       android:gravity="right"
       android:text="@string/app_name"
       android:textColor="@color/white"
       android:shadowColor="@color/orange"
       android:shadowDx="2"
       android:shadowDy="2"
       android:shadowRadius="5" 
       android:textSize="80sp"
       android:textStyle="bold" />
   <ImageView
        android:id="@+id/album"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom = "true"
        android:contentDescription="album"
        android:scaleType="fitStart"
        android:src="@drawable/album2" 
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="10dp"
        /> 
    <TextView
       android:id="@+id/saved_trip"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignParentLeft="true"
       android:layout_alignParentBottom="true"
       android:gravity="right"
       android:text="@string/saved_trip"
       android:textColor="@color/white"
       android:textSize="20sp"
       android:textStyle="bold"
       android:background="@color/bg"
       android:layout_alignBottom = "@id/saved_trip" />
    <ImageView
        android:id="@+id/add"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom = "true"
        android:contentDescription="add"
        android:paddingBottom="5dp"
        android:layout_marginBottom="10dp"
        android:scaleType="fitStart"
        android:src="@drawable/add2" /> 
     <TextView
       android:id="@+id/new_trip"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignParentRight="true"
       android:layout_alignParentBottom="true"
       android:gravity="right"
       android:text="@string/new_trip"
       android:textColor="@color/white"
       android:background="@color/bg"
       android:layout_alignBottom = "@id/add"
       android:textSize="20sp"
       android:textStyle="bold" />

</RelativeLayout>
